<h1 class="pb-4">Explore recipe</h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/recipe">recipe</a></li>
    <li class="breadcrumb-item active" aria-current="page">
      Explore recipe
    </li>
  </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
  <% if(typeof recipe != 'undefined') { %> <%
  recipe.forEach(function(recipe,index){ %>
  <a href="#" class="col text-center category__link">
    <div class="category__img shadow">
      <img
        src="img/<%-recipe.image %>"
        alt="<%-recipe.name %>"
        loading="lazy"
      />
    </div>
    <div class="pt-1"><%-recipe.name %></div>
  </a>
  <% }) %> <% } %>
</div>
