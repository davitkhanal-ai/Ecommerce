<h1 class="pb-4">Explore Categories</h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
    <li class="breadcrumb-item active" aria-current="page">
      Explore Categories
    </li>
  </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
  <% if(typeof categories != 'undefined') { %> <%
  categories.forEach(function(categories,index){ %>
  <a href="#" class="col text-center category__link">
    <div class="category__img shadow">
      <img
        src="img/<%-categories.image %>"
        alt="<%-categories.name %>"
        loading="lazy"
      />
    </div>
    <div class="pt-1"><%-categories.name %></div>
  </a>
  <% }) %> <% } %>
</div>
